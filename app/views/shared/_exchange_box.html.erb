<div class="exchange_box">
  <div class="card">
    <div class="card-header text-center">
      Perform your conversion
    </div>
    <div class="card-block">
      <%= form_tag("/exchange", method: "post", id: "exchange_form") do %>
        <div class="local_currency">
          <div class="form-group">
            <p class="title">Local Currency</p>
            <%= select_tag "currency", options_for_select(currency_select, "BRL"), class: "form-control", id: "currency" %>
          </div>
          <div class="form-group">
            <input type="number" name="quantity" id="quantity" class="form-control" placeholder="Amount ($10)" step="any" required>
          </div>
        </div>
        <div class="form-group">
          <button type="button" name="switch" id="switch" class="btn btn-primary btn-exchange col-md-12">
            <span class="glyphicon glyphicon-sort"></span> SWITCH
          </button>
        </div>
        <div class="destination_currency">
          <div class="form-group">
            <p class="title">Desired Currency</p>
            <%= select_tag "currency_destination", options_for_select(currency_select, "EUR"), class: "form-control", id: "currency_destination"%>
          </div>
          <div class="form-group">
            <input type="text" id="result" name="result" class="form-control" placeholder="Result" readonly>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
